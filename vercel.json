{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "NLTK_DATA": "/tmp/nltk_data"
  },
  "functions": {
    "app.py": {
      "memory": 1024
    }
  }
}
